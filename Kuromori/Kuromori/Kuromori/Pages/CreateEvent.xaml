<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kuromori.CreateEvent">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                    <Label
				        x:Name="Title"
                        Text=""
                        Grid.Row="0"
				        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center">
                    </Label>
                    <Label
				        x:Name="Description"
                        Text=""
                        Grid.Row="1"
				        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center">
                    </Label>
                    <Label
				        x:Name="Date"
                         Text=""
                        Grid.Row="2"
				        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center">
                    </Label>
                <Label
				        x:Name="URL"
                        Text=""
                        Grid.Row="3"
				        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center">
                </Label>

                <Label
				        x:Name="ImageURL"
                        Text=""
                        Grid.Row="4"
				        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center">
                </Label>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>